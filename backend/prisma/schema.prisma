// Prisma Schema for Membership System

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ==================== Enums ====================

enum UserRole {
  ADMIN
  STAFF
}

enum CustomerType {
  REGULAR
  GC
  DESIGNER
  WHOLESALE
  OTHER
}

enum OrderStatus {
  PENDING
  CONFIRMED
  PROCESSING
  COMPLETED
  CANCELLED
}

enum DiscountType {
  PERCENTAGE
  FIXED
}

enum CodeType {
  GENERIC
  EXCLUSIVE
}

enum SMSStatus {
  DRAFT
  SCHEDULED
  SENT
}

enum PointsTransactionType {
  EARN
  REDEEM
}

// ==================== User & Auth ====================

model Profile {
  id        String   @id @db.Uuid
  email     String   @unique
  name      String?
  role      UserRole @default(STAFF)
  status    String   @default("ACTIVE")
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  createdOrders       Order[]        @relation("CreatedByUser")
  createdDiscountCodes DiscountCode[] @relation("CreatedByUser")
  createdSMSCampaigns SMSCampaign[]  @relation("CreatedByUser")

  @@map("profiles")
}

// ==================== Customer ====================

model Customer {
  id                 String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId             String?      @unique @map("user_id") @db.Uuid
  name               String
  email              String?
  phone              String
  type               CustomerType @default(REGULAR)
  points             Int          @default(0)
  discountRate       Int          @default(0) @map("discount_rate")
  customDiscountCode String?      @map("custom_discount_code")
  customDiscountRate Int?         @map("custom_discount_rate")
  notes              String?
  qbCustomerId       String?      @unique @map("qb_customer_id")  // QuickBooks Customer ID
  createdAt          DateTime     @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt          DateTime     @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  orders             Order[]
  discountCodes      DiscountCode[]
  pointsTransactions PointsTransaction[]

  @@index([type])
  @@index([phone])
  @@map("customers")
}

// ==================== Order ====================

model Order {
  id              String      @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  qbId            String?     @map("qb_id")
  qbInvoiceId     String?     @map("qb_invoice_id")
  qbPaymentId     String?     @map("qb_payment_id")  // QuickBooks Payment ID
  qbSyncedAt      DateTime?   @map("qb_synced_at") @db.Timestamptz(6)  // Last sync time
  customerId      String      @map("customer_id") @db.Uuid
  customerName    String      @map("customer_name")
  total           Decimal     @db.Decimal(10, 2)
  amount          Decimal     @db.Decimal(10, 2)
  status          OrderStatus @default(PENDING)
  syncStatus      String      @default("PENDING") @map("sync_status")
  discountCode    String?     @map("discount_code")
  codeOwnerId     String?     @map("code_owner_id") @db.Uuid
  codeOwnerName   String?     @map("code_owner_name")
  createdById     String?     @map("created_by_id") @db.Uuid
  createdAt       DateTime    @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime    @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  customer  Customer    @relation(fields: [customerId], references: [id], onDelete: Cascade)
  createdBy Profile?    @relation("CreatedByUser", fields: [createdById], references: [id])
  items     OrderItem[]

  @@index([customerId])
  @@index([status])
  @@index([qbId])
  @@map("orders")
}

model OrderItem {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  orderId   String   @map("order_id") @db.Uuid
  name      String
  quantity  Int
  unitPrice Decimal  @map("unit_price") @db.Decimal(10, 2)
  total     Decimal  @db.Decimal(10, 2)
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  order Order @relation(fields: [orderId], references: [id], onDelete: Cascade)

  @@map("order_items")
}

// ==================== Discount & Benefits ====================

model DiscountCode {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code            String    @unique
  type            CodeType  @default(GENERIC)
  description     String?
  discountPercent Int       @map("discount_percent")
  isActive        Boolean   @default(true) @map("is_active")
  usageCount      Int       @default(0) @map("usage_count")
  uniqueUsersCount Int      @default(0) @map("unique_users_count")
  customerId      String?   @map("customer_id") @db.Uuid
  createdById     String?   @map("created_by_id") @db.Uuid
  expiresAt       DateTime? @map("expires_at") @db.Timestamptz(6)
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  customer       Customer?          @relation(fields: [customerId], references: [id], onDelete: Cascade)
  createdBy      Profile?           @relation("CreatedByUser", fields: [createdById], references: [id])
  usageHistory   DiscountCodeUsage[]

  @@index([customerId])
  @@index([code])
  @@map("discount_codes")
}

model DiscountCodeUsage {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  discountCodeId String   @map("discount_code_id") @db.Uuid
  customerId     String   @map("customer_id") @db.Uuid
  customerName   String   @map("customer_name")
  customerType   String   @map("customer_type")
  orderId        String   @map("order_id")
  orderTotal     Decimal  @map("order_total") @db.Decimal(10, 2)
  discountAmount Decimal  @map("discount_amount") @db.Decimal(10, 2)
  usedAt         DateTime @default(now()) @map("used_at") @db.Timestamptz(6)

  // Relations
  discountCode DiscountCode @relation(fields: [discountCodeId], references: [id], onDelete: Cascade)

  @@map("discount_code_usage")
}

model DiscountRule {
  id             String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name           String
  description    String?
  type           DiscountType
  value          Int
  customerTypes  String[] @map("customer_types")
  minOrderAmount Decimal? @map("min_order_amount") @db.Decimal(10, 2)
  maxDiscount    Decimal? @map("max_discount") @db.Decimal(10, 2)
  isActive       Boolean  @default(true) @map("is_active")
  validFrom      DateTime? @map("valid_from") @db.Timestamptz(6)
  validUntil     DateTime? @map("valid_until") @db.Timestamptz(6)
  usageLimit     Int?     @map("usage_limit")
  usageCount     Int      @default(0) @map("usage_count")
  createdAt      DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt      DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("discount_rules")
}

model PointsRule {
  id               String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name             String
  description      String?
  earnRate         Int      @map("earn_rate")
  redemptionRate   Decimal  @map("redemption_rate") @db.Decimal(10, 4)
  customerTypes    String[] @map("customer_types")
  minPointsToRedeem Int     @map("min_points_to_redeem")
  maxPointsPerOrder Int?    @map("max_points_per_order")
  isActive         Boolean  @default(true) @map("is_active")
  createdAt        DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt        DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("points_rules")
}

model PointsTransaction {
  id          String                @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  customerId  String                @map("customer_id") @db.Uuid
  amount      Int
  type        PointsTransactionType
  description String?
  createdAt   DateTime              @default(now()) @map("created_at") @db.Timestamptz(6)

  // Relations
  customer Customer @relation(fields: [customerId], references: [id], onDelete: Cascade)

  @@index([customerId])
  @@map("points_transactions")
}

// ==================== SMS ====================

model SMSCampaign {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name            String
  message         String
  status          SMSStatus @default(DRAFT)
  recipientFilter String    @map("recipient_filter")
  recipientCount  Int       @default(0) @map("recipient_count")
  sentCount       Int?      @map("sent_count")
  scheduledAt     DateTime? @map("scheduled_at") @db.Timestamptz(6)
  sentAt          DateTime? @map("sent_at") @db.Timestamptz(6)
  createdById     String?   @map("created_by_id") @db.Uuid
  createdAt       DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt       DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)

  // Relations
  createdBy Profile? @relation("CreatedByUser", fields: [createdById], references: [id])

  @@map("sms_campaigns")
}

model SMSTemplate {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name      String
  content   String
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("sms_templates")
}

// ==================== Contact List ====================

model ContactList {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name        String
  description String?
  count       Int      @default(0)
  source      String   @default("MANUAL")
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("contact_lists")
}

// ==================== System Settings ====================

model SystemSetting {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key         String   @unique
  value       Json
  description String?
  updatedAt   DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("system_settings")
}

// ==================== QuickBooks Integration ====================

model QuickBooksConnection {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  realmId       String   @unique @map("realm_id")  // QuickBooks Company ID
  accessToken   String   @map("access_token") @db.Text  // Encrypted
  refreshToken  String   @map("refresh_token") @db.Text  // Encrypted
  tokenExpiry   DateTime @map("token_expiry") @db.Timestamptz(6)
  companyName   String?  @map("company_name")
  isActive      Boolean  @default(true) @map("is_active")
  createdAt     DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt     DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  @@map("quickbooks_connections")
}

model QuickBooksSyncLog {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  entityType  String   @map("entity_type")  // INVOICE, CUSTOMER, PAYMENT
  entityId    String   @map("entity_id")    // Local entity ID
  qbId        String   @map("qb_id")        // QuickBooks entity ID
  action      String                        // CREATE, UPDATE, DELETE, SYNC
  status      String                        // SUCCESS, FAILED, PENDING
  errorMsg    String?  @map("error_msg") @db.Text
  payload     Json?                         // Request/response data for debugging
  createdAt   DateTime @default(now()) @map("created_at") @db.Timestamptz(6)

  @@index([entityType, entityId])
  @@index([status])
  @@map("quickbooks_sync_logs")
}
